# Email Configuration for Alert Notifications
# Copy this file to .env and update with your SMTP settings

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alert Settings
ALERT_FROM_EMAIL=collections@yourcompany.com
ALERT_FROM_NAME=DM9 Collections System

# Email Templates
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_DEBUG=false

# TestSprite API Configuration
TESTSPRITE_API_KEY=your-testsprite-api-key